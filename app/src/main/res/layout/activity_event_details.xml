<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tcf2019.FragmentEventDetailsActivity">

    <android.support.design.widget.TabLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        app:tabGravity="fill"

        app:tabIndicatorColor="#f2973c"
        android:id="@+id/tabLayout_event_details"/>

    <android.support.v4.view.ViewPager
        android:background="@mipmap/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager_eventDetails"/>
</LinearLayout>