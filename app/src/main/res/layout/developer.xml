                        android:layout_marginLeft="14.9dp"
                        android:layout_marginTop="13.9dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="37dp"
                        android:src="@drawable/ic_keyboard_backspace_black_24dp" />

