<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00171d">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9.3dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:id="@+id/trend_relative_layout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/card_gradient_blogger"
            >

          <com.facebook.drawee.view.SimpleDraweeView
              android:id="@+id/user_profile_image"
              android:layout_width="68dp"
              android:layout_height="68dp"
              fresco:roundAsCircle="true"
              android:layout_marginBottom="46dp"
              android:layout_marginRight="262dp"
              android:layout_marginLeft="12dp"
              android:layout_marginTop="9dp"
              fresco:placeholderImage="@drawable/profile"/>

            <ImageView
                android:id="@+id/crown_img_view"
                android:layout_width="17.4dp"
                android:layout_height="11.7dp"
                android:layout_alignEnd="@+id/user_profile_image"
                android:layout_alignBottom="@+id/user_profile_image"
                android:layout_marginBottom="0.3dp"
                android:src="@drawable/ic_king2" />

            <TextView
                android:id="@+id/rank_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="93dp"
                android:layout_marginRight="218dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="78dp"
                android:lineSpacingExtra="41sp"
                android:text="#1"
                android:textColor="#ffe733"
                android:textSize="26sp"
                />

            <TextView
                android:id="@+id/top_trending_person_of_the_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="65dp"
                android:layout_marginBottom="84dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="22sp"
                android:text="Top Trending Person of the Day"
                android:textColor="#8acad6"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/username_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="44dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="49dp"
                android:lineSpacingExtra="25sp"
                android:paddingLeft="44dp"
                android:paddingTop="8dp"
                android:paddingRight="44dp"
                android:paddingBottom="8dp"
                android:text="Arvind Kejriwal"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:background="@drawable/round_corner"
                android:backgroundTint="#067692"/>




            <View
                android:id="@+id/divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d0d0d0"
                android:layout_marginTop="89dp"
                android:layout_marginBottom="34dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="90dp"
                android:background="#f8f8f8"
                >

                <ImageView
                    android:id="@+id/excited_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12.1dp"
                    android:layout_marginLeft="12.1dp"
                    android:layout_marginTop="6.7dp"
                    android:src="@drawable/ic_excited" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="11dp"
                    android:layout_toRightOf="@+id/excited_image"
                    android:layout_marginBottom="9dp"
                    android:layout_marginRight="245dp"
                    android:lineSpacingExtra="16sp"
                    android:text="Excited Earned"
                    android:textColor="#555555"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/today_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/today_point_number"

                    android:lineSpacingExtra="21sp"
                    android:text="Today"
                    android:textColor="#6a6a6a"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/today_point_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="12.5dp"
                    android:layout_toLeftOf="@+id/divider_vertical"
                    android:lineSpacingExtra="33sp"
                    android:text="123"
                    android:textColor="#b90000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/divider_vertical"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="4.5dp"
                    android:layout_marginBottom="3.5dp"
                    android:layout_marginRight="11.5dp"
                    android:layout_toLeftOf="@+id/all_point"
                    android:layout_marginLeft="12.5dp"
                    android:lineSpacingExtra="21sp"
                    android:text="|"
                    android:textColor="#b4b4b4"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/all_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/total_point_number"
                    android:lineSpacingExtra="21sp"
                    android:text="Total"
                    android:textColor="#6a6a6a"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/total_point_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="14dp"
                    android:layout_alignParentRight="true"
                    android:lineSpacingExtra="33sp"
                    android:text="1230"
                    android:textColor="#b90000"
                    android:textSize="12sp" />


            </RelativeLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>