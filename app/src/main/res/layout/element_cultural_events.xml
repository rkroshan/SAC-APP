<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:layout_marginTop="9dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    android:id="@+id/parentRV"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView
        android:id="@+id/card_cultural"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#154c64">

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/nameeeeee"/>
    <TextView
        android:layout_marginTop="23dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="18dp"
        android:id="@+id/eventname_textview"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#dddddd"
        android:text="ROBOTICS"
        android:shadowRadius="10"
        android:shadowColor="#000000"
        android:lineSpacingExtra="14sp"
        android:letterSpacing="0.3"
        android:gravity="center"
        android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_below="@+id/eventname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.02"
            android:layout_marginBottom="21dp"
            android:id="@+id/eventname_about"
            android:lineSpacingExtra="11sp"
            tools:text="Dragging you into the future, 6 feet at a time."
            />

</RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>