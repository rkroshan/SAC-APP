<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"


    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_highlights"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="8dp"
        android:outlineAmbientShadowColor="#ffffff"
        android:outlineSpotShadowColor="#ffffff"

        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:id="@+id/rel_lay_highlights"
            android:layout_width="match_parent"
            android:layout_height="133dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/highlights_card_imageView"
                />

            <TextView
                android:id="@+id/tv_highlight_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="101dp"
                android:layout_marginBottom="8dp"
                android:text="Band Night"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_highlight_dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/tv_highlight_event"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="23sp"
                android:text="27 Nov | 5.30 PM"
                android:textColor="#ffffff"
                android:textSize="9sp" />

            <RelativeLayout
                android:id="@+id/relativeBottom"
                android:layout_width="120dp"
                android:layout_height="17dp"

                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"

                >

                <TextView
                    android:id="@+id/tv_highlight_otherpeopleGoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="2.6dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@id/tv_othersGoing"
                    android:gravity="end"
                    android:lineSpacingExtra="16sp"
                    android:text="547"
                    android:textColor="#454545"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_othersGoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="4dp"
                    android:lineSpacingExtra="12sp"
                    android:text="Others going"
                    android:textColor="#454545"
                    android:textSize="7sp" />
            </RelativeLayout>

            <Button
                android:layout_width="63dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="77dp"
                android:layout_marginBottom="6dp"
                android:layout_toStartOf="@id/relativeBottom"
                android:background="@drawable/round_corner_highlights_button"
                android:text="Going?"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:id="@+id/goingButton"
                android:textSize="12sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>