<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00171d">

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      fresco:cardBackgroundColor="@android:color/transparent"
      fresco:cardElevation="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/rank_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="11.5dp"
          android:layout_marginBottom="11.5dp"
          android:textSize="16sp"
          android:textColor="#ffe733"
          android:lineSpacingExtra="25sp"
          android:gravity="end"
          android:text="#4"/>

      <com.facebook.drawee.view.SimpleDraweeView
          android:id="@+id/user_img_view"
          android:layout_width="26dp"
          android:layout_height="26dp"
          fresco:roundAsCircle="true"
          android:layout_toRightOf="@+id/rank_view"
          android:layout_marginLeft="14dp"
          fresco:placeholderImage="@drawable/profile"
          android:layout_marginTop="9.5dp"
          android:layout_marginBottom="9.5dp"/>

      <TextView
          android:id="@+id/username_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/user_img_view"
          android:layout_marginLeft="11dp"
          android:layout_marginBottom="17.5dp"
          android:layout_marginTop="17.5dp"
          android:text="Arvind Kejrival"
          android:textAlignment="center"
          android:textSize="10sp"
          android:textColor="#ffffff"
          android:lineSpacingExtra="29sp"/>

      <android.support.v7.widget.CardView
          android:id="@+id/point_card_view"
          android:layout_width="75dp"
          android:layout_height="21dp"
          android:layout_alignParentRight="true"
          android:layout_marginTop="12.5dp"
          android:layout_marginBottom="11.5dp"
          android:layout_marginLeft="99dp"
          android:layout_marginRight="45dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF24383D">

          <TextView
              android:id="@+id/total"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="10dp"
              android:layout_marginBottom="3dp"
              android:layout_marginTop="4dp"
              android:textSize="10sp"
              android:textColor="#c1c1c1"
              android:lineSpacingExtra="21sp"
              android:gravity="end"
              android:text="Today"/>

          <TextView
              android:id="@+id/likes_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="3dp"
              android:textSize="12sp"
              android:textColor="#c1c1c1"
              android:lineSpacingExtra="33sp"
              android:text="93"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"/>

        </RelativeLayout>

      </android.support.v7.widget.CardView>


      <ImageView
          android:id="@+id/uparrow_imgview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="29dp"
          android:layout_marginBottom="15.6dp"
          android:layout_marginTop="19.3dp"
          android:layout_alignParentRight="true"
          />
      <View
          android:id="@+id/divider"
          android:layout_width="332dp"
          android:layout_height="0dp"
          android:layout_marginLeft="16.5dp"
          android:layout_marginRight="11.5dp"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:background="#5c5c5c" />

    </RelativeLayout>

  </android.support.v7.widget.CardView>


</RelativeLayout>