<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="9dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    android:id="@+id/parentRV"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/eventtechnical_card">


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#215854">
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/nameeeeee"/>

            <TextView
                android:id="@+id/eventname_textview_technical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="0.3"
                android:lineSpacingExtra="14sp"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="ROBOTICS"
                android:textAlignment="center"
                android:textColor="#dddddd"
                android:textSize="18sp" />
            <TextView
                android:layout_below="@+id/eventname_textview_technical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.02"
                android:layout_marginBottom="21dp"
                android:id="@+id/eventname_about_technical"
                android:lineSpacingExtra="11sp"
                tools:text="Dragging you into the future, 6 feet at a time."
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>