<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="10dp"
        android:elevation="4dp"
        android:id="@+id/cardview_fixtures"

        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#273438"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#273438"
        android:id="@+id/relativecard">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_running"
            android:alpha="0.1"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:roundedCornerRadius="15dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/team1SimpleDrawee"
            />
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:id="@+id/invisible1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSE"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/element_versus_intramurals_team1_tv"
            android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:roundedCornerRadius="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/team2SimpleDrawee"
            />
        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/invisible2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ECE"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/element_versus_intramurals_team2_tv"
                android:textSize="18dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/team1SimpleDrawee"
            android:layout_toStartOf="@id/team2SimpleDrawee">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="League Match"
                android:textColor="#ffffff"
                android:id="@+id/element_versus_intramurals_tv_matchtype"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:alpha="0.5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Feb | 8:00 PM"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/element_versus_intramurals_tv_dateTime"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Ground"
                android:textColor="#ffffff"
                android:id="@+id/element_versus_intramurals_tv_venue"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
    </RelativeLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE won by 7 wickets."
            android:textColor="#313131"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:id="@+id/element_versus_intramurals_tv_result"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffffff"

        android:alpha="0.5"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#273438">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_trophy"
            android:alpha="0.5"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:alpha="0.5"
            android:src="@drawable/ic_trophy"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Man of the Match: SurajVikash"
            android:textColor="#ffffff"
            android:paddingTop="4dp"
            android:id="@+id/element_versus_intramurals_manofmatch"
            android:paddingBottom="4dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>