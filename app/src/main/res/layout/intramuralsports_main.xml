<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#00171d"

    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_registrations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#ffffff"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <ImageView
                android:id="@+id/intramuralsports_back"
                android:layout_width="wrap_content"
                android:foregroundGravity="left"
                android:layout_height="40dp"
                android:src="@drawable/ic_keyboard_backspace_black_24dp"
                android:layout_marginRight="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="31sp"
                android:text="Open Registrations"
                />
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:scrollbars="horizontal"
                    android:id="@+id/linearLayout"

                    android:layout_centerHorizontal="true">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/rb_gender_group"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/rb_men"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MEN"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:layout_marginRight="10dp"
                            android:textSize="15sp"
                            />

                        <RadioButton
                            android:id="@+id/rb_women"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Women"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>
                        <RadioButton
                            android:id="@+id/rb_mixDoubles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Mix Doubles"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="15sp"/>

                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="10sp"
                        android:visibility="visible"
                        android:id="@+id/gender_error"/>

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/intramuralsports_main_game_spinner"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_text_field_registrations"
                        android:textAlignment="center"
                        android:layout_marginLeft="50dp"
                        android:text=""
                        android:textColor="#ffffff"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="20dp"
                        >

                    </TextView>

                    <RadioGroup
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/rb_group_degree"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/rb_pg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PG"
                            android:checked="false"
                            android:visibility="visible"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            />

                        <RadioButton
                            android:id="@+id/rb_ug"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="UG"
                            android:checked="false"
                            android:visibility="visible"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>
                    </RadioGroup>

                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/intramuralsports_main_game_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/spinner_register_sports"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"
                        >
                    </Spinner>

                    <RadioGroup
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/rb_group_players"
                        android:layout_gravity="center">

                        <RadioButton
                            android:id="@+id/rb_player1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLAYER 1"
                            android:checked="true"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            />

                        <RadioButton
                            android:id="@+id/rb_player2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="PLAYER 2"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:textSize="20sp"/>
                        <Button
                            android:id="@+id/button_player1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLAYER 1"
                            android:checked="true"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:lineSpacingExtra="12sp"
                            android:textAllCaps="false"
                            android:visibility="gone"
                            android:background="@drawable/round_button_registrations"/>
                        <Button
                            android:id="@+id/button_player2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PLAYER 2"
                            android:checked="true"
                            android:textColor="@color/white"
                            android:buttonTint="@color/white"
                            android:layout_marginRight="10dp"
                            android:textSize="20sp"
                            android:visibility="gone"
                            android:gravity="center"
                            android:lineSpacingExtra="12sp"
                            android:textAllCaps="false"
                            android:background="@drawable/round_button_registrations"/>


                    </RadioGroup>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:visibility="invisible"
                            android:id="@+id/player1_detail_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="50dp"
                            android:paddingRight="50dp">
                            <EditText
                                android:id="@+id/intramuralsports_main_name1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="NAME"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:paddingTop="5dp"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingBottom="5dp"
                                android:background="@drawable/edittext_bg"
                                />

                            <EditText
                                android:id="@+id/intramuralsports_main_roll1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="ROLL NO"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:paddingTop="5dp"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingBottom="5dp"
                                android:background="@drawable/edittext_bg"
                                />



                            <EditText
                                android:id="@+id/intramuralsports_main_emailId1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="Email id"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/edittext_bg"
                                />



                            <EditText
                                android:id="@+id/intramuralsports_main_branch1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="Branch"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/edittext_bg"
                                />



                            <EditText
                                android:id="@+id/intramuralsports_main_mobile1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="MOBILE NO"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:paddingTop="5dp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingBottom="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/edittext_bg"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/player2_detail_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="50dp"
                            android:visibility="invisible"
                            android:paddingRight="50dp">
                            <EditText
                                android:id="@+id/intramuralsports_main_name2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="NAME"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:paddingTop="5dp"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingBottom="5dp"
                                android:background="@drawable/round_text_field_registrations"
                                />

                            <EditText
                                android:id="@+id/intramuralsports_main_roll2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="ROLL NO"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:paddingTop="5dp"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingBottom="5dp"
                                android:background="@drawable/round_text_field_registrations"
                                />



                            <EditText
                                android:id="@+id/intramuralsports_main_emailId2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="Email id"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"                    android:gravity="center"
                                android:textSize="20sp"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/round_text_field_registrations"
                                />



                            <EditText
                                android:id="@+id/intramuralsports_main_branch2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="Branch"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"                    android:gravity="center"
                                android:textSize="20sp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/round_text_field_registrations"
                                />



                            <EditText
                                android:id="@+id/intramuralsports_main_mobile2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:hint="MOBILE NO"
                                android:textColor="@color/white"
                                android:textColorHint="#7E7E7E"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:paddingTop="5dp"
                                android:inputType="number"
                                android:maxLines="1"
                                android:paddingBottom="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/round_text_field_registrations"
                                />

                        </LinearLayout>
                    </FrameLayout>
                    <Button
                        android:visibility="invisible"
                        android:id="@+id/intramuralsports_main_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REGISTER"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="#af0000"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</ScrollView>