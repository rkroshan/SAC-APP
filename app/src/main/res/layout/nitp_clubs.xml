<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg"
    android:orientation="vertical"
    tools:context=".sac.NitpClubs.NitpClubs">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#ffffff"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/nitp_club_details_back"
            android:layout_width="wrap_content"
            android:foregroundGravity="left"
            android:layout_height="40dp"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIT PATNA CLUB"
            android:textSize="16sp"
            android:textColor="#000000"
            android:lineSpacingExtra="31sp"
            android:textStyle="bold"/>

    </android.support.v7.widget.Toolbar>
    <!--<ImageView
        android:id="@+id/nitp_club_back"
        android:layout_width="60dp"
        android:layout_height="60dp"/>-->

    <android.support.design.widget.TabLayout
        android:id="@+id/nitp_clubs_tabLayout"
        android:layout_width="match_parent"
        app:tabMinWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="scrollable"
        android:background="#ffffff"
        android:paddingBottom="4dp"
        app:tabIndicatorColor="#ff9315"
        style="@style/Base.Widget.Design.TabLayout"
        android:layout_height="30dp">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/nitp_clubs_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>


</LinearLayout>
