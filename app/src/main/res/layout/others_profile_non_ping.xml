<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/profile_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.3dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/roundcorner_editprofile1"
            android:backgroundTint="#253237">



            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/others_profile_image"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_centerHorizontal="true"
                app:roundedCornerRadius="34dp"
                android:layout_marginTop="18dp"
                app:placeholderImage="@drawable/profile"/>

            <TextView
                android:id="@+id/others_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="102dp"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="18sp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:text="-- --" />


           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="122dp"
               android:id="@+id/rel1"
               android:orientation="horizontal"
               android:layout_centerHorizontal="true">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:letterSpacing="0.02"
                   android:lineSpacingExtra="11sp"
                   android:id="@+id/trending1"
                   android:textColor="#bdbfc1"
                   android:textSize="10sp"
                   android:text="Trending"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#bdbfc1"
                   android:layout_marginLeft="2dp"
                   android:textSize="5dp"
                   android:layout_toRightOf="@id/trending1"
                   android:layout_alignBottom="@id/trending1"
                   android:textStyle="bold"
                   android:text="B"/>

               <TextView
                   android:id="@+id/trend_b"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:layout_marginLeft="10dp"
                   android:layout_marginBottom="0dp"
                   android:layout_toRightOf="@id/trending1"
                   android:lineSpacingExtra="10sp"
                   android:text="- -"
                   android:textColor="#ffe733"
                   android:textSize="13sp" />

           </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel1"
                android:orientation="horizontal"
                android:id="@+id/rel2"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="11sp"
                    android:id="@+id/trending2"
                    android:textColor="#bdbfc1"
                    android:textSize="10sp"
                    android:text="Trending"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bdbfc1"
                    android:layout_marginLeft="2dp"
                    android:textSize="5dp"
                    android:layout_toRightOf="@id/trending2"
                    android:layout_alignBottom="@id/trending2"
                    android:textStyle="bold"
                    android:text="P"/>
                <TextView
                    android:id="@+id/trend_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10sp"
                    android:text="- -"
                    android:layout_toRightOf="@id/trending2"
                    android:layout_marginLeft="10dp"
                    android:textColor="#53acdc"
                    android:textSize="13sp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/others_profile_tcf_id"
                android:layout_width="156dp"
                android:layout_height="27dp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/rel2"
                android:background="@drawable/roundcorner_editprofile1"
                android:backgroundTint="#ffffff"
                android:lineSpacingExtra="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textColor="#d50000"
                android:textSize="16sp"
                android:text="TCF------"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/others_profile_tcf_id"
                android:layout_toEndOf="@+id/others_profile_tcf_id"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="11sp"
                android:textColor="#bdbfc1"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="TCF ID"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/others_profile_tcf_id"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:id="@+id/crownLayout1"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#bdbfc1"
                    android:lineSpacingExtra="11sp"
                    android:text="Crowns:"
                    android:id="@+id/crown_textview1"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/crownsImageView1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_crown_down2"
                        android:layout_marginLeft="11.5dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#bdbfc1"
                        android:lineSpacingExtra="11sp"
                        android:text="0"
                        android:id="@+id/totalCrowns1"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:id="@+id/crownsImageView2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_crown_down1"
                        android:layout_marginLeft="11.5dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#bdbfc1"
                        android:lineSpacingExtra="11sp"
                        android:text="0"
                        android:id="@+id/totalCrowns2"
                        android:paddingLeft="5dp"
                        />
                </LinearLayout>

            </LinearLayout>




        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/designationRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner_editprofile1"
            android:layout_below="@+id/profile_block"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:backgroundTint="#253237">

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#ffeba8"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="8sp"
            android:gravity="center_horizontal"
            android:layout_below="@id/designationRelativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12.6dp"
            android:text="---------------Quote----------------"
            android:id="@+id/others_profile_quoteTextView"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="11sp"
            android:gravity="center_horizontal"
            android:text="Basic Info"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/others_profile_quoteTextView"
            android:layout_marginTop="12dp"
            />
        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner_editprofile1"
            android:layout_below="@+id/others_profile_quoteTextView"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="9dp"
            android:paddingBottom="23dp"
            android:layout_marginRight="9dp"
            android:backgroundTint="#253237">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#bdbfc1"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="27dp"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="11sp"
                android:text="College"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#bdbfc1"
                android:letterSpacing="0.02"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="46dp"
                android:lineSpacingExtra="11sp"
                android:text="Branch"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#bdbfc1"
                android:letterSpacing="0.02"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="68dp"
                android:lineSpacingExtra="11sp"
                android:text="Roll No."
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#bdbfc1"
                android:letterSpacing="0.02"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="90dp"
                android:lineSpacingExtra="11sp"
                android:text="Year"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="81dp"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="11sp"
                android:text="NIT Patna"
                android:id="@+id/others_profile_college"
                />

            <TextView
                android:id="@+id/others_profile_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="46dp"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="11sp"
                android:text="CSE"
                android:textColor="#ffffff"
                android:textSize="10sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.02"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="68dp"
                android:lineSpacingExtra="11sp"
                android:id="@+id/others_profile_roll"
                android:text="1606089"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.02"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="90dp"
                android:lineSpacingExtra="11sp"
                android:id="@+id/others_profile_year"
                android:text="3rd"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#bdbfc1"
                android:letterSpacing="0.02"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="112dp"
                android:lineSpacingExtra="11sp"
                android:id="@+id/others_profile_staticText1"
                android:text="Phone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.02"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="112dp"
                android:lineSpacingExtra="11sp"
                android:id="@+id/others_profile_phone"
                android:text="-- --"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#bdbfc1"
                android:letterSpacing="0.02"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="134dp"
                android:lineSpacingExtra="11sp"
                android:text="Email"
                android:id="@+id/others_profile_staticText2"
                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_mail_outline_black_24dp"
                android:layout_marginTop="130dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:id="@+id/mailButton"

                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_call_white"
                android:layout_marginTop="108.5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:id="@+id/callButton"

                />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_whatsapp_logo"
                android:layout_marginTop="108.5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:id="@+id/whatsAppButton"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.02"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="134dp"
                android:lineSpacingExtra="11sp"
                android:id="@+id/others_profile_email"
                android:text="-- --"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/round_button_registrations"
            android:layout_below="@id/details"
            android:layout_marginTop="22dp"
            android:id="@+id/pingButton_others_profile"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="26.4dp"
                android:layout_height="26.4dp"
                android:layout_toRightOf="@id/pingHim"
                android:id="@+id/fingerImage"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_finger_color"
                android:layout_marginRight="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="12sp"
                android:text="PING HIM"
                android:id="@+id/pingHim"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10.5dp"
                />
            />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.02"
            android:id="@+id/mayKnow"
            android:lineSpacingExtra="5sp"
            android:text="To unlock contact details you need to PING him."
            android:layout_below="@id/pingButton_others_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="25dp"
            />


    </RelativeLayout>
</ScrollView>
</RelativeLayout>