<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/pop_up_sac"
    android:layout_width="322dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#253237">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:layout_width="42.3dp"
                android:layout_height="44.7dp"
                android:id="@+id/ic_sac_app"
                android:src="@drawable/ic_sac2"/>
            <TextView
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="178dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_below="@id/ic_sac_app"
                android:id="@+id/sac_2.0"
                android:textColor="#dbdbdb"
                android:lineSpacingExtra="4sp"
                android:text="2.0"
                />
            <TextView
                android:layout_marginTop="16.3dp"
                android:layout_below="@+id/sac_2.0"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:lineSpacingExtra="19sp"
                android:gravity="center_horizontal"
                android:text="Hola!  New Version Available"
                android:id="@+id/new_dersion"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/new_dersion"
                android:textColor="#d8d8d8"
                android:lineSpacingExtra="5sp"
                android:gravity="center_horizontal"
                android:id="@+id/update_line"
                android:text="Please, update app to new Version
to continue using."
                />
            <TextView
                android:layout_below="@+id/update_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_update_now"
                android:textColor="#000000"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="Yes, Update Now"
                android:id="@+id/yes_button"
                />
            <TextView
                android:layout_below="@id/yes_button"
                android:id="@+id/no_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11.8dp"
                android:background="@drawable/round_not_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="No, Thanks"
                />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>