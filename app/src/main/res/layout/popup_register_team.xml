<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/pop_up_sac"
    android:layout_width="322dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#253237">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:layout_width="42.3dp"
                android:layout_height="44.7dp"
                android:id="@+id/ic_sac_app"
                android:src="@drawable/ic_sac2"/>
            <TextView
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="178dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:layout_below="@id/ic_sac_app"
                android:id="@+id/sac_2.0"
                android:textColor="#dbdbdb"
                android:lineSpacingExtra="4sp"
                android:text="2.0"
                />
            <TextView
                android:layout_marginTop="16.3dp"
                android:layout_below="@+id/sac_2.0"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="For group events\nPlease register through website: "
                android:id="@+id/new_dersion"
                />

            <TextView
                android:layout_below="@+id/new_dersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_update_now"
                android:textColor="#000000"
                android:lineSpacingExtra="10sp"
                android:gravity="center_horizontal"
                android:text="tcf.nitp.tech"
                android:id="@+id/web_button"
                />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>